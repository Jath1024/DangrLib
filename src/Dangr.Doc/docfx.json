{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "Dangr.Doc.sln"
          ],
          "cwd": "../..",
          "exclude": [
            "**/obj/**",
            "**/bin/**",
            "_site/**"
          ]
        }
      ],
      "dest": "obj/api",
      "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "globalMetadata": {
      "_appTitle":  "DangrLib",
      "_appFooter": "<span>Copyright © 2017 Dan Garvey. All rights reserved.<br>Generated by <strong>DocFX</strong></span>",
      "_disableContribution": true
    },
    "content": [
      {
        "files": [
          "api/**.yml"
        ],
        "cwd": "obj"
      },
      {
        "files": [
          "api/*.md",
          "articles/**.md",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "bin/_site",
    "template": [
      "default"
    ]
  }
}